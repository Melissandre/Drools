rule "temperatura"
	when
		q: DisplayFrame();
		not Question(nazwaPytania == "temperatura" );
	then
		String[] list = {"ciepło", "zimno"};
		String m = new String();
		q.setQuestionB("Jaką temp wolisz",list);
		//q.setQuestion2("Jaką temperaturę wolisz?", list);
		m =  q.getKotek();
		
		insert(new Chosen(m));
		insert(new Question("temperatura"));
		insert(new DisplayFrame());
		retract(q);
		
		//retract(q);
end

